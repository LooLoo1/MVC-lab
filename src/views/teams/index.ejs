<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Teams</h1>
        <a href="/teams/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Team
        </a>
    </div>

    <% if (teams && teams.length > 0) { %>
        <div class="row">
            <% teams.forEach(team => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= team.name %></h5>
                            <p class="card-text"><%= team.description %></p>
                            
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-user"></i> Leader: <%= team.leader.name %>
                                </small>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-users"></i> Members: <%= team.members.length %>
                                </small>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-project-diagram"></i> Projects: <%= team.projects.length %>
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/teams/<%= team._id %>" class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>
                            <% if (team.leader._id.toString() === user._id.toString() || 
                                  team.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'admin')) { %>
                                <a href="/teams/<%= team._id %>/edit" class="btn btn-sm btn-outline-secondary">
                                    Edit
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            No teams found. Create your first team to get started!
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %> 