<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title"><%= team.name %></h1>
                    <p class="card-text"><%= team.description %></p>
                    
                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fas fa-user"></i> Leader: <%= team.leader.name %>
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fas fa-calendar"></i> Created: <%= new Date(team.createdAt).toLocaleDateString() %>
                        </small>
                    </div>
                </div>
            </div>

            <!-- Team Members Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Team Members</h3>
                    <% if (team.leader._id.toString() === user._id.toString() || 
                          team.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'admin')) { %>
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addMemberModal">
                            <i class="fas fa-plus"></i> Add Member
                        </button>
                    <% } %>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <% team.members.forEach(member => { %>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1"><%= member.user.name %></h6>
                                    <small class="text-muted">
                                        <i class="fas fa-envelope"></i> <%= member.user.email %>
                                    </small>
                                </div>
                                <div>
                                    <span class="badge bg-<%= member.role === 'admin' ? 'primary' : 'secondary' %>">
                                        <%= member.role %>
                                    </span>
                                    <% if ((team.leader._id.toString() === user._id.toString() || 
                                          team.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'admin')) &&
                                          member.user._id.toString() !== team.leader._id.toString()) { %>
                                        <form action="/teams/<%= team._id %>/members/<%= member.user._id %>" method="POST" class="d-inline">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-danger btn-sm ms-2">
                                                <i class="fas fa-user-minus"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Team Projects Section -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Team Projects</h3>
                    <% if (team.leader._id.toString() === user._id.toString() || 
                          team.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'admin')) { %>
                        <div>
                            <a href="/projects/create?teamId=<%= team._id %>" class="btn btn-success btn-sm me-2">
                                <i class="fas fa-plus"></i> Create Project
                            </a>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addProjectModal">
                                <i class="fas fa-link"></i> Add Existing Project
                            </button>
                        </div>
                    <% } %>
                </div>
                <div class="card-body">
                    <% if (team.projects && team.projects.length > 0) { %>
                        <div class="list-group">
                            <% team.projects.forEach(project => { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">
                                            <a href="/projects/<%= project._id %>" class="text-decoration-none">
                                                <%= project.title %>
                                            </a>
                                        </h5>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> Deadline: <%= new Date(project.deadline).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    <div>
                                        <span class="badge bg-<%= project.status === 'completed' ? 'success' : 
                                                           project.status === 'in-progress' ? 'primary' : 
                                                           project.status === 'on-hold' ? 'warning' : 'secondary' %>">
                                            <%= project.status %>
                                        </span>
                                        <% if (team.leader._id.toString() === user._id.toString() || 
                                              team.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'admin')) { %>
                                            <form action="/teams/<%= team._id %>/projects/<%= project._id %>" method="POST" class="d-inline">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-danger btn-sm ms-2" title="Remove from team">
                                                    <i class="fas fa-unlink"></i>
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <p class="text-muted mb-3">No projects assigned to this team yet.</p>
                            <% if (team.leader._id.toString() === user._id.toString() || 
                                  team.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'admin')) { %>
                                <div>
                                    <a href="/projects/create?teamId=<%= team._id %>" class="btn btn-success me-2">
                                        <i class="fas fa-plus"></i> Create Project
                                    </a>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProjectModal">
                                        <i class="fas fa-link"></i> Add Existing Project
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Team Actions</h3>
                </div>
                <div class="card-body">
                    <% if (team.leader._id.toString() === user._id.toString() || 
                          team.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'admin')) { %>
                        <a href="/teams/<%= team._id %>/edit" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-edit"></i> Edit Team
                        </a>
                    <% } %>
                    
                    <% if (team.leader._id.toString() === user._id.toString()) { %>
                        <form action="/teams/<%= team._id %>" method="POST" class="d-grid">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this team?')">
                                <i class="fas fa-trash"></i> Delete Team
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Member Modal -->
<div class="modal fade" id="addMemberModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Team Member</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/teams/<%= team._id %>/members" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="email" class="form-label">Member Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select class="form-select" id="role" name="role">
                            <option value="member">Member</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Member</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Project Modal -->
<div class="modal fade" id="addProjectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Project to Team</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/teams/<%= team._id %>/projects" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="projectId" class="form-label">Select Project</label>
                        <select class="form-select" id="projectId" name="projectId" required>
                            <option value="">Choose a project...</option>
                            <% if (availableProjects && availableProjects.length > 0) { %>
                                <% availableProjects.forEach(project => { %>
                                    <option value="<%= project._id %>"><%= project.title %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Project</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 